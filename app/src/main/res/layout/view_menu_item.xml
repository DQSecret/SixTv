<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_height="78dp"
    android:layout_width="match_parent"
    tools:background="#1A77BD"
    tools:layout_width="1280dp">

    <TextView
        android:id="@+id/tv_no"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_name_zh"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="1." />

    <TextView
        android:id="@+id/tv_name_zh"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_name_en"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText"
        tools:text="啤酒-中文名" />

    <TextView
        android:id="@+id/tv_name_en"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_name_zh"
        app:layout_constraintTop_toBottomOf="@id/tv_name_zh"
        tools:ignore="HardcodedText"
        tools:text="啤酒-英文名" />

    <TextView
        android:id="@+id/tv_short_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_name_zh"
        app:layout_constraintStart_toEndOf="@id/tv_name_zh"
        tools:text="短标题"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_latest_tips"
        android:layout_height="41dp"
        android:layout_marginStart="13dp"
        android:layout_width="119dp"
        android:src="@drawable/ic_latest_tips"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/tv_short_content"
        app:layout_constraintTop_toTopOf="@id/tv_name_zh"
        tools:ignore="ContentDescription"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_winning"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_width="wrap_content"
        android:textColor="#F1FF00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_latest_tips"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:text="2020\nCCBA\n银奖" />

    <TextView
        android:id="@+id/tv_alcohol"
        android:layout_height="wrap_content"
        android:layout_marginStart="760dp"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText"
        tools:text="abv.4.2%" />

    <TextView
        android:id="@+id/tv_single_cup"
        android:layout_height="wrap_content"
        android:layout_marginStart="906dp"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText"
        tools:text="¥ 40" />

    <TextView
        android:id="@+id/tv_a_liter"
        android:layout_height="wrap_content"
        android:layout_marginStart="991dp"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText"
        tools:text="¥ 123" />

    <TextView
        android:id="@+id/tv_two_litres"
        android:layout_height="wrap_content"
        android:layout_marginStart="1089dp"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText"
        tools:text="¥ 250" />

    <TextView
        android:id="@+id/tv_cans"
        android:layout_height="wrap_content"
        android:layout_marginStart="1187dp"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText"
        tools:text="¥ 28" />
</androidx.constraintlayout.widget.ConstraintLayout>